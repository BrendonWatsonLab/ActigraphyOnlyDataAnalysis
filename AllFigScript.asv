        % Flatten Data into Distributions (Day vs Night)
        % Day: ZT 0-11 (Columns 1-12) | Night: ZT 12-23 (Columns 13-24)
        m_day_vals = reshape(male_diffs(:, 1:12), [], 1);
        f_day_vals = reshape(female_diffs(:, 1:12), [], 1);
        m_night_vals = reshape(male_diffs(:, 13:24), [], 1);
        f_night_vals = reshape(female_diffs(:, 13:24), [], 1);
        
        % Remove NaNs
        m_day_vals(isnan(m_day_vals)) = []; f_day_vals(isnan(f_day_vals)) = [];
        m_night_vals(isnan(m_night_vals)) = []; f_night_vals(isnan(f_night_vals)) = [];
        
        fprintf('\n--- STATS: Figure 5C (Distribution Comparisons) ---\n');
        
        % --- TEST 1: DAYTIME (ZT 0-11) ---
        fprintf('>>> DAYTIME (ZT 0-11) Distribution Analysis <<<\n');
        % Normality Test (Kolmogorov-Smirnov)
        [h_m, p_m_norm] = kstest((m_day_vals-mean(m_day_vals))/std(m_day_vals)); % Standardize for kstest
        [h_f, p_f_norm] = kstest((f_day_vals-mean(f_day_vals))/std(f_day_vals));
        
        fprintf('  Normality (KS-Test): Male p=%.4f, Female p=%.4f\n', p_m_norm, p_f_norm);
        
        if p_m_norm > 0.05 && p_f_norm > 0.05
            fprintf('  Distributions are Normal. Using T-Test.\n');
            [~, p_day] = ttest2(m_day_vals, f_day_vals);
            test_type = 'T-Test';
        else
            fprintf('  Distributions are NOT Normal. Using Wilcoxon Rank Sum.\n');
            p_day = ranksum(m_day_vals, f_day_vals);
            test_type = 'RankSum';
        end
        fprintf('  Result (M vs F Day): p = %.4f (%s)\n', p_day, test_type);
        
        % --- TEST 2: NIGHTTIME (ZT 12-23) ---
        fprintf('>>> NIGHTTIME (ZT 12-23) Distribution Analysis <<<\n');
        [h_m, p_m_norm] = kstest((m_night_vals-mean(m_night_vals))/std(m_night_vals));
        [h_f, p_f_norm] = kstest((f_night_vals-mean(f_night_vals))/std(f_night_vals));
        
        if p_m_norm > 0.05 && p_f_norm > 0.05
            [~, p_night] = ttest2(m_night_vals, f_night_vals);
        else
            p_night = ranksum(m_night_vals, f_night_vals);
        end
        fprintf('  Result (M vs F Night): p = %.4f\n', p_night);
        
