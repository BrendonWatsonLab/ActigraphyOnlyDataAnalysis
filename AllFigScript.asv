        % Group data for violinplot
        dist_data = [m_day_vals; f_day_vals; m_night_vals; f_night_vals];
        dist_grp = [repmat({'Male-Day'},length(m_day_vals),1); repmat({'Female-Day'},length(f_day_vals),1); ...
                    repmat({'Male-Night'},length(m_night_vals),1); repmat({'Female-Night'},length(f_night_vals),1)];
        
